<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!--基本配置
        Port:监听端口
        Code:产品代码
        ServerId:产品游服代码
        Redis.Host:Redis主机地址
        Redis.Port:Redis主机端口
        Redis.Password:密码
        Redis.Db:数据库位置
    -->
    <add key="Product.Code" value="6"/>
    <add key="Product.ServerId" value="1"/>
    <add key="Redis.Host" value="127.0.0.1"/>
    <add key="Redis.Db" value="6"/>
    <add key="Product.ClientDesDeKey" value="j6=9=1ac"/>
    <add key="ScriptRelativePath" value="Script" />
    <add key="CSharpRootPath" value="CsScript" />
    <add key="Game.Action.Script.TypeName" value="ZyGames.Tianjiexing.BLL.Action.Action{0}"/>
    <add key="Game.Language.TypeName" value="GameServer.CsScript.Locale.SimplifiedLanguage" />
    <add key="Script_IsDebug" value="True" />
    <add key="Python_Disable" value="False"/>
    <add key="ScriptSysAsmReferences" value="System.Web.Services.dll;Microsoft.Scripting.dll" />

    <add key="Game.Http.Host" value="kd1.scutgame.com" />
    <add key="Game.Http.Port" value="80" />
    <!--排行榜生命周期1小时-->
    <add key="Ranking.timeout" value="5"/>
    <add key="MaxLoadCount" value="1"/>
    <add key="CacheOverdueTime" value="4"/>
    <!--发布版本类型Debug加入RunLoader压力测试-->
    <add key="PublishType" value="Debug"/>
    <add key="EnableGM" value="True"/>
    <add key="ActionTimeOut" value="600"/>
    <add key="CacheManager_Interval" value="600000"/>
    
  </appSettings>
  <connectionStrings>
    <add name="SnsCenter" providerName="SqlDataProvider" connectionString="Data Source=.;Database=snscenter;Uid=game_user;Pwd=123;Pooling=true;"/>
    <add name="PayCenter" providerName="SqlDataProvider" connectionString="Data Source=.;Database=PayDB;Uid=game_user;Pwd=123;Pooling=true;"/>
    <add name="TianjiexingConfig" providerName="SqlDataProvider" connectionString="Data Source=.;Database=KdConfig;Uid=game_user;Pwd=123;"/>
    <add name="TianjiexingData" providerName="SqlDataProvider" connectionString="Data Source=.;Database=Kd1Data;Uid=game_user;Pwd=123;"/>
    <add name="TianjiexingLog" providerName="SqlDataProvider" connectionString="Data Source=.;Database=Kd1Log;Uid=game_user;Pwd=123;"/>
  </connectionStrings>

</configuration>